<div class="row">
    <div class="col-md-12">
          <h2>Categories</h2>
          <hr />
          <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category&nbsp;ID</th>    
                        <th>Category&nbsp;Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}   {{!the data in the categories array is fetched from categories.json by res.render() in /categories route in server.js}}
                        <tr>
                            <td><a href="/posts?category={{id}}">{{id}}</a></td>    {{!fetch attributes value}}
                            <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>  
        </div> 
        <div class="col-md-12 text-center">
            {{#unless categories}}
                <strong>{{message}}</strong>
            {{/unless}}
        </div>
    </div>
</div>
